{
    "compilerOptions": {
      // this aligns with Vue's browser support
      "target": "es6",
      // this enables stricter inference for data properties on `this`
      "strict": false,
      // if using webpack 2+ or rollup, to leverage tree shaking:

      "rootDir": "src/",
      "outDir": "dist/",
      "module": "amd",
      "lib": ["es2017", "dom"],
      "moduleResolution": "node",
      "sourceMap": false
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.vue"
    ],
    "files": [
      "src/main.ts"
    ]
}